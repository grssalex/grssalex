<script>
  import { gsap } from 'gsap';
  
  // Hero section animation
  document.addEventListener('DOMContentLoaded', () => {
    const tl = gsap.timeline({ defaults: { ease: 'power3.out' } });
    
    tl.from('#hero-title', { y: 50, opacity: 0, duration: 1 })
      .from('#hero-subtitle', { y: 50, opacity: 0, duration: 0.8 }, '-=0.6')
      .from('#hero-description', { y: 50, opacity: 0, duration: 0.8 }, '-=0.6')
      .from('.hero-cta', { y: 50, opacity: 0, duration: 0.8 }, '-=0.6')
      .from('.code-window', { scale: 0.9, opacity: 0, duration: 1 }, '-=0.6');
      
    // Code typing effect simulation
    const codeLines = document.querySelectorAll('.code-content code span');
    gsap.from(codeLines, {
      opacity: 0,
      duration: 0.05,
      stagger: 0.015,
      delay: 1
    });
  });
</script>

