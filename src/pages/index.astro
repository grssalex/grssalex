      scrollTrigger: {
        trigger: '.projects-section',
        start: 'top 80%',
      }
    });
    
    gsap.from('.projects-description', {
      y: 30,
      opacity: 0,
      duration: 0.8,
      scrollTrigger: {
        trigger: '.projects-description',
        start: 'top 80%',
      }
    });
    
    // Toggle for Epitech projects
    const epitechToggle = document.getElementById('epitech-toggle');
    const currentProjects = document.getElementById('current-projects');
    const epitechProjects = document.getElementById('epitech-projects');
    const projectsGradient = document.getElementById('projects-gradient');
    
    // Function to type text letter by letter with cursor
    function typeWriter(element: HTMLElement, newText: string, isEpitech: boolean, callback?: () => void) {
      if (!element) return;
      
      let currentIndex = 0;
      element.textContent = '';
      
      // Add gradient class
      if (isEpitech) {
        element.classList.add('epitech-gradient');
      } else {
        element.classList.remove('epitech-gradient');
      }
      
      // Add typing cursor
      element.classList.add('typing-cursor');
      
      function typeNextLetter() {
        if (currentIndex < newText.length) {
          element.textContent = newText.substring(0, currentIndex + 1);
          currentIndex++;
          setTimeout(typeNextLetter, 80); // 80ms entre chaque lettre
        } else {
          // Animation terminée, enlever le curseur après 1 seconde
          setTimeout(() => {
            element.classList.remove('typing-cursor');
            if (callback) callback();
          }, 1000);
        }
      }
      
      typeNextLetter();
    }
    
    // Function to animate title change with real typewriter effect
    function animateTitle(newText: string, isEpitech: boolean, callback?: () => void) {
      if (!projectsGradient) return;
      
      // Step 1: Fade out current text
      projectsGradient.classList.add('fade-out');
      
      setTimeout(() => {
        // Step 2: Remove fade-out
        projectsGradient.classList.remove('fade-out');
        
        // Step 3: Start typing animation
        typeWriter(projectsGradient, newText, isEpitech, callback);
      }, 200);
    }
    
    if (epitechToggle && currentProjects && epitechProjects && projectsGradient) {
      epitechToggle.addEventListener('change', function() {
        if ((this as HTMLInputElement).checked) {
          // Switch to Epitech projects
          currentProjects.style.display = 'none';
          epitechProjects.style.display = 'grid';
          
          // Animate title change with callback for project cards
          animateTitle('Projets Epitech', true, () => {
            // Animate epitech projects after title is done typing
            gsap.from('#epitech-projects .project-card', {
              y: 50,
              opacity: 0,
              duration: 0.6,
              stagger: 0.1
            });
          });
          
        } else {
          // Switch back to current projects
          epitechProjects.style.display = 'none';
          currentProjects.style.display = 'grid';
          
          // Animate title change back with callback for project cards
          animateTitle('Projets', false, () => {
            // Animate current projects after title is done typing
            gsap.from('#current-projects .project-card', {
              y: 50,
              opacity: 0,
              duration: 0.6,
              stagger: 0.1
            });
          });
        }
      });
    }
  });
</script>
